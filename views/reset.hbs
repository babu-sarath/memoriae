<div class="text-center">

    <h1><i class="fas fa-blog fa-2x fa-rotate-270"></i></h1>
    <h1><strong>Reset Password</strong></h1>
    <small class="form-text text-muted">Reset your password here</small>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_vwCDpL.json" background="transparent" speed="1"
        style="width: 300px; height: 300px;" autoplay></lottie-player>
    <form action="/users/reset" method="POST">
        {{#if email}}
        <input type="hidden" id="email" name="email" value="{{email}}" />
        {{/if}}

        <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter new password"
                required>
        </div>
        <input type="checkbox" onclick="myFunction()"> Show Password
        <div class="col text-center">
            <button type="submit" class="btn btn-warning btn-login my-3"><strong>
                    <strong>Reset</strong>
            </button>
        </div>

    </form>

</div>