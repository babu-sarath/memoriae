
<div class="row justify-content-center py-5">
    <div class="col-md-9">
        <h3>Edit your Story</h3>
        <div class="card px-4 py-4">
            <form action="/stories/{{story._id}}" method="POST">

                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{story.title}}">
                </div>

                <div class="form-group">
                    <label for="status">Status</label>
                    <select id="status" class="form-control" name="status">
                        {{#select story.status}}
                        <option value="public" selected>Public</option>
                        <option value="private" >Private</option>
                        {{/select}}
                    </select>
                
                </div>

                <div class="form-group">
                    <h5>Tell us your memory</h5>
                    <textarea id="body" class="form-control" name="body">{{story.body}}</textarea>
                </div>

                <div class="form-group">
                    <a href="/dashboard" class="btn btn-warning" >Cancel</a>
                    <input type="submit" class="btn btn-outline-success" value="Save">
                        
                </div>

            </form>
        </div>

    </div>
    
</div>